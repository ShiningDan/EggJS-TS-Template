{
  "name": "intell-be",
  "version": "1.0.0",
  "description": "智慧网站后端",
  "private": true,
  "egg": {
    "typescript": true
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-server-intell-be",
    "stop": "egg-scripts stop --title=egg-server-intell-be",
    "dev": "egg-bin dev -r egg-ts-helper/register",
    "debug": "egg-bin debug -r egg-ts-helper/register",
    "test-local": "egg-bin test -r egg-ts-helper/register",
    "test": "npm run lint -- --fix && npm run test-local",
    "cov": "egg-bin cov -r egg-ts-helper/register",
    "tsc": "ets && tsc -p tsconfig.json",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "tslint --project . -c tslint.json",
    "clean": "ets clean",
    "doctor": "yarn run tsc && yarn run clean",
    "commit": "git cz",
    "fmt": "prettier --write './{app,config,test}/**/*.ts' ./app.ts"
  },
  "dependencies": {
    "cz-customizable": "^5.3.0",
    "egg": "^2.6.1",
    "egg-cors": "^2.1.2",
    "egg-scripts": "^2.6.0",
    "egg-validate": "^2.0.2",
    "lodash": "^4.17.11",
    "mysql2": "^1.6.4",
    "typeorm": "^0.2.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "@types/supertest": "^2.0.0",
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "commitizen": "^3.0.5",
    "egg-bin": "^4.6.2",
    "egg-ci": "^1.8.0",
    "egg-mock": "^3.16.0",
    "egg-ts-helper": "^1.11.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "tslib": "^1.9.0",
    "tslint": "^4.0.0",
    "typescript": "^3.0.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "eslintIgnore": [
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && yarn run doctor && lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "post-merge": "yarn"
    }
  },
  "lint-staged": {
    "./{app,config,test}/**/*.{ts,js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "author": "shiningDan",
  "license": "MIT"
}
